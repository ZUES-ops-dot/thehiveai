# X (Twitter) OAuth
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret
X_REDIRECT_URI=http://localhost:3000/api/auth/x/callback

# Auth
AUTH_SECRET=your_random_32_char_secret_here

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Cron (optional - for securing the tracking cron endpoint)
CRON_SECRET=your_cron_secret_here

# SocialData API (optional - fallback when Nitter is down)
# Free tier: 100 requests/month at https://socialdata.tools
SOCIALDATA_API_KEY=your_socialdata_api_key

# Apify Twitter Scraper (optional - high volume fallback)
# Free tier: $5 credit (~20k tweets) at https://apify.com
APIFY_API_TOKEN=your_apify_token
